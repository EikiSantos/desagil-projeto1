<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:alertDialogTheme">@style/DialogNice</item>
    </style>


    <style name="DialogNice" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_alignParentBottom">true</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:excludeName">@string/app_name</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowClipToOutline">true</item>

    </style>

</resources>
