<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DialogNice" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_alignEnd">@id/end</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/accelerate_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/accelerate_decelerate_interpolator</item>
    </style>


    <style name="DialogSlideAnim" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

</resources>
